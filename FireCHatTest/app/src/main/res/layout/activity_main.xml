<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/edit_name" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:hint="Name"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/edit_name"
            app:layout_constraintEnd_toEndOf="@+id/edit_name" android:id="@+id/edit_message"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_name"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Message"/>
    <Button
            android:text="Send Message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/send_message" app:layout_constraintStart_toStartOf="@+id/edit_message"
            app:layout_constraintEnd_toEndOf="@+id/edit_message" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_message" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="58dp"
            app:layout_constraintStart_toStartOf="@+id/send_message"
            app:layout_constraintEnd_toEndOf="@+id/send_message"
            android:id="@+id/user_display" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/send_message"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="241dp"
            app:layout_constraintStart_toStartOf="@+id/user_display"
            app:layout_constraintEnd_toEndOf="@+id/user_display"
            android:id="@+id/text_display" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/user_display"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>