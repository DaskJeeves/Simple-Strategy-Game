<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/battleship_background_other_pages"
        tools:context=".UserSearch">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/welcome_text" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.0"
            android:fontFamily="@font/new_rocker"
            android:background="@color/colorPrimary" android:textColor="@color/white"
            android:layout_marginTop="28dp"/>
        <TextView
                android:text="Your Stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView3" android:textSize="30sp" android:layout_marginTop="80dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="Games Won:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/winsDisplay" android:textSize="25sp" android:layout_marginTop="140dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="Games Played:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/gamesDisplay" android:textSize="25sp" android:layout_marginTop="200dp"
                app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:text="Started Ratio:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/startedRatio" android:textSize="25sp" android:layout_marginTop="260dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="Win Ratio (lifetime):"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/lifetimeRatio" android:textSize="25sp" android:layout_marginTop="320dp"
                app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4" android:textSize="20sp"
            android:fontFamily="@font/new_rocker"
            android:background="@color/colorPrimary" android:textColor="@color/white"
            android:onClick="goBack"
            app:layout_constraintTop_toBottomOf="@+id/lifetimeRatio" android:layout_marginTop="84dp"
            tools:layout_editor_absoluteX="161dp"/>

</android.support.constraint.ConstraintLayout>