<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lose_screen" android:id="@+id/coordinatorLayout">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/appBarLayout"/>

    <ImageView
            android:layout_width="442dp"
            android:layout_height="747dp" app:srcCompat="@drawable/lose_image" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.967"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/background_blue"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5" android:onClick="createNewGame"
            android:layout_marginTop="552dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.469" android:background="@color/colorPrimary"
            android:textColor="@color/white"/>
    <Button
            android:text="RETURN TO MAIN MENU"
            android:layout_width="227dp"
            android:layout_height="48dp"
            android:id="@+id/button6" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" app:layout_constraintStart_toStartOf="@+id/button5"
            app:layout_constraintEnd_toEndOf="@+id/button5" android:onClick="gotoMenu"
            android:textColor="@color/white" android:background="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.constraint.Constraints android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/constraints"/>
    <android.support.constraint.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:id="@+id/group"/>
    <EditText
            android:layout_width="271dp"
            android:layout_height="112dp"
            android:inputType="textPersonName"
            android:text="@string/title_activity_lose_screen"
            android:ems="10"
            android:id="@+id/editText"
            android:selectAllOnFocus="false" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
            android:singleLine="false"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:textColor="@color/common_google_signin_btn_text_dark_default" android:gravity="center"
            android:textSize="60sp" android:fontFamily="@font/new_rocker"/>

</android.support.constraint.ConstraintLayout>