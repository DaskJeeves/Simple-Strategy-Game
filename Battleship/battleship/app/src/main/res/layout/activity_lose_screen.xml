<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/background_blue"
        android:layout_height="match_parent"
        tools:context=".lose_screen" android:id="@+id/coordinatorLayout">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/appBarLayout"/>

    <ImageView
            android:layout_width="442dp"
            android:layout_height="544dp" app:srcCompat="@drawable/lose_image" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/background_blue"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5" android:onClick="createNewGame"
            android:layout_marginTop="484dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:background="@color/colorPrimary"
            android:textColor="@color/white" android:text="Play Again"/>
    <Button
            android:text="RETURN TO MAIN MENU"
            android:layout_width="227dp"
            android:layout_height="48dp"
            android:id="@+id/button6" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" app:layout_constraintStart_toStartOf="@+id/button5"
            app:layout_constraintEnd_toEndOf="@+id/button5" android:onClick="gotoMenu"
            android:textColor="@color/white" android:background="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.constraint.Constraints android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/constraints"/>
    <android.support.constraint.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:id="@+id/group"/>
    <TextView
            android:text="@string/title_activity_lose_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView7" android:textSize="76sp" android:fontFamily="@font/new_rocker"
            android:textColor="@color/white" app:layout_constraintHorizontal_bias="0.494" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>