<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/battleship_background_other_pages"
        tools:context=".Gameplay">

    <Button
            android:text="View Opponents Board"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button4" android:layout_marginTop="60dp"
            app:layout_constraintHorizontal_bias="0.49" android:background="@color/colorPrimary"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:text="View My Board"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button5"
            app:layout_constraintHorizontal_bias="0.49" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" android:background="@color/colorPrimary"
            android:textColor="@color/white"/>
    <Button
            android:text="Return To Menu"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button6"
            app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/button5"
            android:background="@color/colorPrimary" android:textColor="@color/white"
            android:onClick="finish_activity"/>
    <ImageView
            android:layout_width="343dp"
            android:layout_height="302dp" app:srcCompat="@drawable/grid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.602" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/game_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/game_name" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>