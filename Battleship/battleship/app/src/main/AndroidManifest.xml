<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.battleship">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.example.battleship.UserSearch">
        </activity>
        <activity android:name="com.example.battleship.ChooseUser">
        </activity>
        <activity android:name=".TestChatActivity">
        </activity>
        <activity android:name="com.example.battleship.CreateUserActivity">
        </activity>
        <activity
                android:name="com.example.battleship.Gameplay"
                android:parentActivityName="com.example.battleship.UserDashboard">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.battleship.UserDashboard"/>
        </activity>
        <activity
                android:name="com.example.battleship.UserDashboard"
                android:parentActivityName="com.example.battleship.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.battleship.MainActivity"/>
        </activity>
        <activity android:name="com.example.battleship.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>